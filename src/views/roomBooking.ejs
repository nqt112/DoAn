<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Sona Template">
    <meta name="keywords" content="Sona, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đặt phòng</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/css/flaticon.css" type="text/css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">

</head>

<body>
    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="menu-item">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a href="/">
                                <img src="/image/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="nav-menu">
                            <nav class="mainmenu">
                                <ul>
                                    <li class=""><a href="/">Trang chủ</a></li>
                                    <li class="active"><a href="/roomBooking">Đặt phòng</a></li>
                                    <% if (user) { %>
                                        <li class=""><a href="/bookingDetail">Đơn đặt</a></li>
                                        <li><a href="/userDetail/<%= user.id %>">Tài khoản</a></li>
                                        <% } else { %>
                                            <li><a href="/userDetail/">Tài khoản</a></li>
                                            <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->

    <!-- Breadcrumb Section Begin -->
    <div class="breadcrumb-section" style="padding-top: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="room-booking p-0">
                        <h3>Đặt phòng</h3>

                        <form action="">
                            <div class="check-date d-inline-block">
                                <label for="date-in">Check In:</label>
                                <input type="date" name="checkin" placeholder="Check In" class="dateInput">
                            </div>
                            <div class="check-date d-inline-block">
                                <label for="date-out">Check Out:</label>
                                <input type="date" name="checkout" class="dateOutput">
                            </div>
                            <div class=" select-option d-inline-block">
                                <label for="paymentMethod">Phương thức thanh toán:</label>
                                <select class="form-select" id="paymentMethod">
                                    <option focus value="">Chọn phương thức thanh toán</option>
                                    <option value="bankTransfer">Chuyển khoản ngân hàng</option>
                                    <option value="QR">Quét QR</option>
                                </select>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section End -->

    <!-- Room Details Section Begin -->
    <section class="room-details-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <table class="table align-middle table-bordered room_list">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Loại phòng</th>
                                <th scope="col">Số người tối đa</th>
                                <th scope="col">Giá phòng</th>
                                <th scope="col">Số phòng còn trống</th>
                                <th scope="col">Số lượng phòng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categoryList.forEach(function(item) { %>
                                <tr class="room_item" data-item="<%= JSON.stringify(item) %>">
                                    <td class="d-none">
                                        <%= item.id %>
                                    </td>
                                    <th scope="row">
                                        <div>
                                            <h5>
                                                <%= item.name %>
                                            </h5>
                                        </div>
                                        <img src="/image/uploadFile/<%= item.image %>" alt="" width="150" height="100">
                                    </th>
                                    <td>
                                        <%= item.numberOfPeople %>
                                    </td>
                                    <td>
                                        <%= item.price %> / Đêm
                                    </td>
                                    <td class="available-count">
                                        <%= availableRoomCounts[item.id] || 0 %>
                                    </td>
                                    <td><input style="width: 50px" type="number" class="room-number" value="0" min="0"
                                            step="1"></td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>

                <div class="col-lg-3">
                    <div>
                        <h4>Thông tin đặt phòng</h4>
                        <div>Checkin: <span class="check-in-value dateInput"></span></div>
                        <div>Checkout: <span class="check-out-value"></span></div>
                        <table class="table align-middle mt-2 table-bordered room_list">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Loại phòng</th>
                                    <th scope="col">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody class="room_select_item_list">
                                <!-- render list booked room -->
                            </tbody>
                        </table>
                        <div name="total_price">Tổng tiền: <span class="total-price"></span></div>
                    </div>
                    <div class="mt-2">
                        <button type="submit" id="" class="submit-button btn btn-outline-secondary">Đặt phòng</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Room Details Section End -->
    <!-- Payment Modal -->
    <!-- Modal cho thanh toán bằng chuyển khoản ngân hàng -->
    <div>

    </div>
    <div class="modal fade" id="bankTransferModal" tabindex="-1" aria-labelledby="bankTransferModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <!-- Nội dung modal cho thanh toán bằng chuyển khoản ngân hàng -->
                <div class="modal-header">
                    <h5 class="modal-title" id="bankTransferModalLabel">Thanh toán bằng chuyển khoản ngân hàng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Luật khách sạn -->
                    <p style="color: red; font-style: italic;text-decoration: underline;">Quý khách vui lòng tiền hành
                        cọc 50% số tiền phòng để xác nhận đặt phòng, khách sạn xin cảm ơn!</p>
                    <!-- Nội dung chi tiết để chuyển khoản -->
                    <p>Vui lòng chuyển khoản vào tài khoản sau:</p>
                    <p>Số tài khoản: 123456789</p>
                    <p>Ngân hàng: ACB</p>
                    <p>Người nhận: Nguyễn Văn A</p>
                </div>
                <div style=" margin-right: 15px;  font-size: 19px" class="d-flex justify-content-end ">Tổng tiền cọc: <span
                        style="color: #3db858; margin-left: 5px;" class="total-price-modal"></span></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class=" cancelBooking btn btn-danger " data-dismiss="modal">Huỷ đặt
                        phòng</button>
                    <button type="button" class="confirmPaymentButton btn btn-primary">Xác nhận đặt phòng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal cho thanh toán bằng QR code -->
    <div class="modal fade" id="qrCodeModal" tabindex="-1" aria-labelledby="qrCodeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <!-- Nội dung modal cho thanh toán bằng QR code -->
                <div class="modal-header">
                    <h5 class="modal-title" id="qrCodeModalLabel">Thanh toán bằng QR code</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Luật khách sạn -->
                    <p style="color: red; font-style: italic;text-decoration: underline;">Quý khách vui lòng tiền hành
                        cọc 50% số tiền phòng để xác nhận đặt phòng, khách sạn xin cảm ơn!</p>
                    <!-- Hình ảnh QR code -->
                    <img src="/image/qrpay.jpg" class="img-fluid" alt="QR Code" style="width: 350px; height: 350px; margin-left: 58px;">
                </div>
                <div style=" margin-right: 15px;  font-size: 19px" class="d-flex justify-content-end ">Tổng tiền cọc: <span
                        style="color: #3db858; margin-left: 5px;" class="total-price-modal"></span></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class=" cancelBooking btn btn-danger " data-dismiss="modal">Huỷ đặt
                        phòng</button>
                    <button type="button" class="confirmPaymentButton btn btn-primary">Xác nhận đặt phòng</button>
                </div>
            </div>
        </div>
    </div>



    <!-- Footer Section Begin -->
    <%- include('./_partialView/footer.ejs') %>
        <!-- Footer Section End -->

        <!-- Js Plugins -->
        <script src="/js/jquery-3.3.1.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/jquery.magnific-popup.min.js"></script>
        <script src="/js/jquery.nice-select.min.js"></script>
        <script src="/js/jquery-ui.min.js"></script>
        <script src="/js/jquery.slicknav.js"></script>
        <script src="/js/owl.carousel.min.js"></script>
        <script src="/js/main.js"></script>
        <script src="/js/roomBooking.js"></script>


</body>

</html>