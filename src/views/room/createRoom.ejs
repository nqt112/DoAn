<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Thêm mới phòng</title>
  <link rel="shortcut icon" type="image/png" href="/image/logos/favicon.png" />
  <link rel="stylesheet" href="/css/styles.min.css" />
  <link rel="stylesheet" href="/css/tabler-icons/tabler-icons.css">

</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <%- include('../_partialView/asideAdmin.ejs') %>

    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
    <%- include('../_partialView/headerAdmin.ejs') %>
      
      <!--  Header End -->
      <div class="container-fluid">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-3">Thêm mới phòng</h5>
              <div class="card">
                <div class="card-body">
                  <form action="/admin/room/create-new-room" method="post">
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Tên loại phòng</label>
                      <!-- <input type="number" class="form-control" name ="roomCategoryId" aria-describedby="emailHelp" required> -->
                      <select class="form-select" name="roomCategoryId">
                        <% categoryList.forEach((category) => { %>
                          <option value="<%= category.id %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Tên phòng</label>
                      <input type="text" class="form-control" name= "roomNumber" required>
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Tầng</label>
                      <input type="number" class="form-control" name= "floor" required>
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Trạng thái</label>
                      <input type="text" class="form-control" name= "status" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                  <a href="/admin/room/roomlist"> <button type="button" class="btn btn-outline-danger">Quay lại</button></a>
                  </form>
                  <div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/libs/jquery/dist/jquery.min.js"></script>
  <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sidebarmenu.js"></script>
  <script src="/js/app.min.js"></script>
  <script src="/libs/simplebar/dist/simplebar.js"></script>
</body>

</html>