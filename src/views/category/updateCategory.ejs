<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cập nhật loại phòng</title>
  <link rel="shortcut icon" type="image/png" href="/image/logos/favicon.png" />
  <link rel="stylesheet" href="/css/styles.min.css" />
  <link rel="stylesheet" href="/css/tabler-icons/tabler-icons.css">

</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <%- include('../_partialView/asideAdmin.ejs') %>

    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
    <%- include('../_partialView/headerAdmin.ejs') %>
      
      <!--  Header End -->
      <div class="container-fluid">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Chỉnh sửa loại phòng</h5>
              <div class="card">
                <div class="card-body">

                  <form action="/admin/category/update-category/<%= category.id%>" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Hình ảnh</label>
                      <input type="file" value="<%= category.image %>" class="form-control"  name= "image">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Tên loại phòng</label>
                      <input type="text" value="<%= category.name %>" class="form-control" required id="exampleInputEmail1"  name ="name" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3"> 
                      <label for="exampleInputPassword1" class="form-label">Diện tích</label>
                      <input type="text" value="<%= category.square %>" class="form-control" required name= "square">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Số người</label>
                      <input type="number" value="<%= category.numberOfPeople %>" class="form-control" required name= "numberOfPeople">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Loại giường</label>
                      <input type="text" value="<%= category.typeOfBed %>" class="form-control" required name= "typeOfBed">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Giá</label>
                      <input type="text" value="<%= category.price %>" class="form-control" required name= "price">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Mô tả</label>
                      <textarea class="form-control" required name="description" rows="4"><%= category.description %></textarea>

                      <!-- <input type="text" value="<%= category.description %>" class="form-control" required name= "description"> -->
                    </div>
                  
                    <button type="submit" class="btn btn-primary">Lưu</button>
                  <a href="/admin/category/categorylist"> <button type="button" class="btn btn-outline-danger">Quay lại</button></a>
                  </form>
                  <div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/libs/jquery/dist/jquery.min.js"></script>
  <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sidebarmenu.js"></script>
  <script src="/js/app.min.js"></script>
  <script src="/libs/simplebar/dist/simplebar.js"></script>
</body>

</html>