<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Quản lý tài khoản</title>
  <link rel="shortcut icon" type="image/png" href="/image/logos/favicon.png" />
  <link rel="stylesheet" href="/css/styles.min.css" />
  <link rel="stylesheet" href="/css/tabler-icons/tabler-icons.css">
  <link rel="stylesheet" href="/css/font-awesome.min.css">
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <%- include('../_partialView/asideAdmin.ejs') %>

    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
    <%- include('../_partialView/headerAdmin.ejs') %>
      
      <!--  Header End -->
      <div class="container-fluid">
        <div class="container-fluid">
          <h3>Quản lý tài khoản</h3>
          <div class="card">
            <div class="card-body">
              <a href="/admin/user/createUser"> <button type="button" class="btn btn-outline-danger mb-1">Thêm mới</button></a>
               

               <div class=" table-responsive">
                 <table class="table table-hover">
                   <thead>
                     <tr class="table-active">
                       <th scope="col">STT</th>
                       <th scope="col">Họ & Tên</th>
                       <!-- <th scope="col">Tên tài khoản</th> -->
                       <th scope="col">Email</th>
                       <th scope="col">Số điện thoại</th>
                       <!-- <th scope="col">Role</th> -->
                       <th scope="col">Hành động</th>

                     </tr>
                   </thead>
                   <tbody> 

                     <% userList.forEach(function(item, index){ %>
                       <tr>
                         <th scope="row"><%= index + 1 %></th>
                         <td><%= item.fullname %></td>
                         <!-- <td><%= item.username %></td> -->
                         <!-- <td><%= item.password %></td> -->
                         <td><%= item.email %></td>
                         <td><%= item.phone %></td>
                         <!-- <td><%= item.role %></td> -->

                         <td>
                           <form class="mb-1" style="display: inline;" action="/admin/user/updateUser/<%= item.id%>"  method="GET">
                             <i></i>
                             <button type="submit"  class="btn btn-outline-warning"><i class="ti ti-pencil"></i></button>
                           </form>
                           <form style="display: inline;" action="/admin/user/delete-user/<%= item.id%>"  method="POST">
                             <button type="submit" class="btn btn-outline-danger"><i class="ti ti-trash"></i></button>
                             <!-- <input type="text" hidden value="<%= item.id%>" name="id" /> -->
                             
                           </form>
                         </td>
                       </tr>
                     <% }) %>
                     
                   </tbody>
                 </table>
               </div>
               
             </div>
         

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/libs/jquery/dist/jquery.min.js"></script>
  <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/sidebarmenu.js"></script>
  <script src="/js/app.min.js"></script>
  <script src="/libs/simplebar/dist/simplebar.js"></script>
</body>

</html>